@model GuessGameWebApp.Models.Game

<h1>Player: @ViewBag.Greeting</h1>
<h2>You have @ViewBag.TriesLeft tries</h2>
<h3>@ViewBag.PreviousGuess</h3>
<h3>@ViewBag.Result</h3>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="GameScreen">
      
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-4">
          <label asp-for="GuessNumber1" class="control-label">Digit 1</label>
          <input asp-for="GuessNumber1" class="form-control" maxlength="1" placeholder="?"/>
          <span asp-validation-for="GuessNumber1" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
          <label asp-for="GuessNumber2" class="control-label">Digit 2</label>
          <input asp-for="GuessNumber2" class="form-control" maxlength="1" placeholder="?"/>
          <span asp-validation-for="GuessNumber2" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
          <label asp-for="GuessNumber3" class="control-label">Digit 4</label>
          <input asp-for="GuessNumber3" class="form-control" maxlength="1" placeholder="?"/>
          <span asp-validation-for="GuessNumber3" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
          <label asp-for="GuessNumber4" class="control-label">Digit 4</label>
          <input asp-for="GuessNumber4" class="form-control" maxlength="1" placeholder="?"/>
          <span asp-validation-for="GuessNumber4" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
          <input type="submit" value="Guess" class="btn btn-primary" />
        </div>
      
    </form>
  </div>
</div>
<div>
  @Html.Raw(ViewBag.LogOut)
</div>
<div>
  <a asp-action="Index">Back to List</a>
</div>

